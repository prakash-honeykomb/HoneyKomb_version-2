<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FAVGroup"
    android:orientation="vertical"
    android:background="@color/white"

     >
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/actionbar"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/White"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/tittle_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/group"
                android:textColor="@color/bar_title_color"
                android:textSize="@dimen/text_size_22" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <ImageView
                    android:id="@+id/toolbar_calender_IMV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="25dp"
                    android:layout_marginRight="25dp"
                    android:contentDescription="@string/calendar"
                    android:src="@mipmap/calendar"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/toolbar_list_view_IMV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="25dp"
                    android:layout_marginRight="25dp"
                    android:contentDescription="@string/show_event_list"
                    android:src="@mipmap/listview" />

                <ImageView
                    android:id="@+id/toolbar_add_IMV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:contentDescription="@string/add"
                    android:src="@mipmap/addgroup" />

                <TextView
                    android:id="@+id/toolbar_save_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:text="@string/button_text_save"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/owner_name_text_size"
                    android:visibility="gone" />

            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_alignBottom="@+id/actionbar"
        android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
        android:background="@color/header_textColor" />

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/noGroupsLL"
    android:layout_centerHorizontal="true"
    android:gravity="center"
android:visibility="gone"
    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/empty_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
             android:padding="5dp"

            android:layout_marginTop="150dp"
              android:gravity="center"

            android:background="@mipmap/groups_no"

            android:visibility="visible" />
<LinearLayout
    android:layout_width="wrap_content"
    android:id="@+id/empty_view1"

    android:gravity="center"
    android:orientation="vertical"

    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/empty_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:paddingTop="0dp"
    android:gravity="center"
        android:paddingBottom="0dp"
        android:textColor="@color/black"
         android:textStyle="bold"
        android:text="No groups created yet."
        android:textSize="20sp"
        android:visibility="visible" />
    <TextView
        android:id="@+id/empty_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="0dp"
        android:paddingBottom="20dp"
        android:layout_marginBottom="50dp"
        android:text="Create groups for better experience"
        android:textSize="15sp"
        android:visibility="visible" />

</LinearLayout>



    <Button
        android:id="@+id/create_group_BTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:layout_marginTop="50dp"
            android:background="@drawable/rounded_button"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_centerHorizontal="true"
       android:layout_below="@+id/empty_view1"
        android:text="CREATE GROUP"
        android:textColor="@color/white"
        tools:ignore="ButtonStyle" />
</LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/groups_RCV"
        android:layout_below="@+id/actionbar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>
</RelativeLayout>